<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/hud" />

    <TextView
        android:id="@+id/time_counter"
        android:gravity="center"
        android:text="300 s"
        android:textSize="100px"
        android:textColor="@android:color/black"
        android:layout_marginLeft="350px"
        android:layout_marginTop="105px"
        android:layout_width="390px"
        android:layout_height="130px" />

    <TextView
        android:text="00"
        android:textSize="50px"
        android:textColor="@android:color/black"
        android:id="@+id/life_number"
        android:layout_marginLeft="160px"
        android:layout_marginTop="270px"
        android:layout_width="100px"
        android:layout_height="100px" />

    <TextView
        android:id="@+id/text_actions"
        android:text="Encuentra un tag"
        android:textSize="45px"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="334px"
        android:layout_marginLeft="250px"
        android:layout_width="600px"
        android:layout_height="80px" />

    <TextView
        android:id="@+id/text_events"
        android:layout_marginTop="430px"
        android:layout_marginLeft="130px"
        android:layout_width="820px"
        android:layout_height="100px" />


    <ImageView
        android:layout_marginTop="620px"
        android:layout_marginLeft="120px"
        android:layout_width="850px"
        android:layout_height="580px" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/card_image"
        android:layout_marginTop="645px"
        android:layout_marginLeft="120px"
        android:layout_width="840px"
        android:layout_height="550px"
        android:scaleType="fitXY"
    />

    <ImageView
        android:id="@+id/monster_life_bar"
        android:visibility="invisible"
        android:src="@drawable/life_bar"
        android:layout_marginTop="500px"
        android:layout_marginLeft="240px"
        android:layout_width="450px"
        android:layout_height="100px" />

    <TextView
        android:id="@+id/card_health"
        android:visibility="invisible"
        android:text="0"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/black"
        android:layout_marginTop="505px"
        android:layout_marginLeft="150px"
        android:layout_width="80px"
        android:layout_height="80px" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/enemy_weapon"
        android:visibility="invisible"
        android:text="0"
        android:gravity="center"
        android:textSize="80px"
        android:textColor="@android:color/black"
        android:layout_marginTop="500px"
        android:layout_marginLeft="730px"
        android:layout_width="120px"
        android:layout_height="120px" />

    <TextView
        android:id="@+id/enemy_damage"
        android:visibility="invisible"
        android:text="0"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/black"
        android:layout_marginTop="515px"
        android:layout_marginLeft="860px"
        android:layout_width="80px"
        android:layout_height="80px" />




    <ImageView
        android:layout_width="100px"
        android:layout_height="100px" />


    <ImageView
        android:id="@+id/image_life_bar"
        android:src="@drawable/life_bar"
        android:layout_marginLeft="355px"
        android:layout_marginTop="265px"
        android:layout_width="450px"
        android:layout_height="100px" />

    <ImageView
        android:src="@drawable/puno"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView" />

    <ImageView
        android:src="@drawable/puno2"
        android:visibility="invisible"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/punohover" />

    <Button
        android:id="@+id/btn_action1"
        android:background="@android:color/transparent"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"/>



    <ImageView
        android:src="@drawable/puno"
        android:visibility="visible"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/right_hand" />

    <ImageView
        android:src="@drawable/puno2"
        android:visibility="invisible"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/punohover2" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/weapon"
        android:visibility="invisible"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="21dp"
        />

    <Button
        android:id="@+id/btn_action2"
        android:background="@android:color/transparent"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/text_duration"
        android:visibility="invisible"
        android:text="0"
        android:gravity="center"
        android:textSize="80px"
        android:textColor="@android:color/black"
        android:layout_marginRight="40px"
        android:layout_marginBottom="50px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="80px"
        android:layout_height="80px" />

    <TextView
        android:id="@+id/text_damage"
        android:visibility="invisible"
        android:text="0"
        android:gravity="center"
        android:textSize="80px"
        android:textColor="@android:color/black"
        android:layout_marginBottom="170px"
        android:layout_marginRight="320px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="120px"
        android:layout_height="120px" />




</RelativeLayout>
