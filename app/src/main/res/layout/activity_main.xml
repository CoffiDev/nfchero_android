<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/hud" />

    <TextView
        android:id="@+id/time_counter"
        android:gravity="center"
        android:text="300 s"
        android:textSize="100px"
        android:textColor="@android:color/black"
        android:layout_marginLeft="350px"
        android:layout_marginTop="105px"
        android:layout_width="390px"
        android:layout_height="130px" />

    <TextView
        android:id="@+id/text_actions"
        android:text="Correr"
        android:textSize="60px"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="335px"
        android:layout_marginLeft="250px"
        android:layout_width="600px"
        android:layout_height="80px" />

    <TextView
        android:id="@+id/text_events"
        android:layout_marginTop="420px"
        android:layout_marginLeft="120px"
        android:layout_width="850px"
        android:layout_height="200px" />

    <ImageView
        android:layout_marginTop="620px"
        android:layout_marginLeft="120px"
        android:layout_width="850px"
        android:layout_height="580px" />

    <ImageView
        android:id="@+id/image_life_bar"
        android:src="@drawable/life_bar"
        android:layout_marginLeft="355px"
        android:layout_marginTop="265px"
        android:layout_width="450px"
        android:layout_height="100px" />

    <ImageView
        android:src="@drawable/puno"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView" />

    <ImageView
        android:src="@drawable/puno2"
        android:visibility="invisible"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/punohover" />

    <Button
        android:id="@+id/btn_action1"
        android:background="@android:color/transparent"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="18dp"/>



    <ImageView
        android:src="@drawable/puno"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView2" />

    <ImageView
        android:src="@drawable/puno2"
        android:visibility="invisible"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/punohover2" />

    <Button
        android:id="@+id/btn_action2"
        android:background="@android:color/transparent"
        android:layout_width="208px"
        android:layout_height="208px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="18dp"/>




</RelativeLayout>
